rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // 모든 클라이언트 사용자에게 모든 문서에 대한 읽기 권한을 허용합니다.
    match /{document=**} {
      allow read: if true;
    }

    // 모든 클라이언트 사용자에게 모든 문서에 대한 쓰기, 업데이트, 삭제 권한을 허용하지 않습니다.
    // 데이터 변경은 Admin SDK (라즈베리 파이)를 통해서만 가능합니다.
    match /{document=**} {
      allow write: if false;
    }
  }
}